def binary_search(arr, key, start, end):
    """Find index to insert key into arr[start:end] (already sorted)."""
    while start < end:
        mid = (start + end) // 2
        if arr[mid] < key:
            start = mid + 1
        else:
            end = mid
    return start

def binary_insertion_sort(arr):
    for i in range(1, len(arr)):
        key = arr[i]
        # find insertion position in arr[0:i]
        pos = binary_search(arr, key, 0, i)
        # shift elements and insert key
        arr[pos+1:i+1] = arr[pos:i]  # shift right
        arr[pos] = key

# Example usage:
arr = [37, 23, 0, 17, 12, 72, 31]
binary_insertion_sort(arr)
print("Sorted array:", arr)
