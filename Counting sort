def counting_sort(arr):
    max_val = max(arr)
    count = [0] * (max_val + 1)

    for num in arr:          # Count each number
        count[num] += 1

    i = 0
    for num in range(len(count)):  # Build sorted array
        while count[num] > 0:
            arr[i] = num
            i += 1
            count[num] -= 1

# Example usage:
arr = [4, 2, 2, 8, 3, 3, 1]
counting_sort(arr)
print("Sorted array:", arr)
